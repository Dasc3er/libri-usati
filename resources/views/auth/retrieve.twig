{% extends "layout.twig" %}
{% import "macros/form.twig" as form %}

{% block title %}{{ 'retrieve.title'|trans }}{% endblock %}
{% block content %}
			<div class="jumbotron">
				<div class="container text-center">
					<h1><i class="fas fa-key"></i> {{ 'retrieve.header'|trans }}</h1>
					<p>{{ 'retrieve.text'|trans }}</p>
				</div>
			</div>
			<div class="container">
				<form action="" method="post" class="center-form" role="form">
					{{ form.csrf_field(csrf) }}

                    {{ form.field({name: 'email', placeholder: 'base.email'|trans, type: 'email', required: true, autofocus: true}) }}

					<div class="pull-right">
						<a class="btn btn-info" href="{{ route('login', {'locale': locale}) }}"><i class="fas fa-arrow-left"></i> {{ 'base.back'|trans }}</a>
						<button type="submit" class="btn btn-success"><i class="fas fa-unlock-alt"></i> {{ 'retrieve.button'|trans }}</button>
					</div>
					</div>
				</form>
			</div>
{% endblock %}
